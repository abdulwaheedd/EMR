@{
    Layout = "";
}
@{
    ViewData["Title"] = "Main Dashboard";
    ViewData["PageId"] = "Main Dashboard";
}


<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="@Url.Content("~/themes/default-theme/bootstrap.min.css")" rel="stylesheet" />
    <!-- essential studio theme -->
    @*<link rel="stylesheet" href="http://cdn.syncfusion.com/15.1.0.41/js/web/flat-azure/ej.web.all.min.css" />*@
    <link href="@Url.Content("~/themes/default-theme/ej.dashboardViewer.all.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/scripts/jquery.easing.1.3.min.js")"></script>
    <!-- essential studio script -->
    @*<script src="http://cdn.syncfusion.com/15.1.0.41/js/web/ej.web.all.min.js"></script>*@
    <script src="@Url.Content("~/scripts/ej.dashboardViewer.all.min.js")"></script>
    <style>
        body, html, #dashboard {
            overflow: hidden !important;
            height: 100%;
            width: 100%;
        }
    </style>
</head>

<body style="width: 100%;height: 100%">
    <script type="text/javascript">
    $(function (e) {
        $("#dashboard").ejDashboardViewer(
            {
                serviceUrl: '@ViewBag.ServiceUrl.ToString()',
                dashboardPath: '@ViewBag.DashboardPath',
                filterParameters: location.search.substring(1)
            });
    });
    </script>
    <div id="dashboard" style="width: 100%; height: 100%"></div>
</body>
</html>