@using Syncfusion.MVC.EJ;
@using Syncfusion.JavaScript;
@{
    ViewBag.Title = "HMIR Report";
}
<body style="overflow: hidden; position: static; margin: 0px; padding: 0px; width: 100%; height: 100%">
    <div style="width:100%; height:100%; position:absolute;">
        @(Html.EJ().ReportViewer("reportsample")
                                    .ProcessingMode(Syncfusion.JavaScript.ReportViewerEnums.ProcessingMode.Remote)
                                    .ReportServiceUrl(VirtualPathUtility.ToAbsolute("~/api/HMIRReport"))
                                    .ReportPath("~/App_Data/Reports/HMIR/HMIR.rdl"))
    </div>
    @(Html.EJ().ScriptManager())
</body>
<style type="text/css">
    html, body {
        overflow: hidden;
        padding: 0;
        margin: 0;
        height: 100%;
        position: static;
    }

    #reportsample {
        width: 100%;
        height: 99.9%;
        position: absolute;
    }
</style>